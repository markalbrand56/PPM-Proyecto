<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:visibility="visible"
    tools:context=".ui.fragments.HomeFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_HomeFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_recycler_place"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton_HomeFragment_addEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Light_Blue"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:src="@drawable/ic_add"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="end"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addEvent_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_mid"
        android:backgroundTint="@color/Light_Blue"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/floatingActionButton_HomeFragment_addEvent"
        app:layout_constraintEnd_toEndOf="@id/floatingActionButton_HomeFragment_addEvent"
        app:layout_constraintStart_toStartOf="@id/floatingActionButton_HomeFragment_addEvent"
        app:srcCompat="@drawable/ic_event"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addCategory_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Light_Blue"
        android:layout_marginBottom="@dimen/margin_mid"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/addEvent_action"
        app:layout_constraintEnd_toEndOf="@+id/addEvent_action"
        app:layout_constraintStart_toStartOf="@+id/addEvent_action"
        app:srcCompat="@drawable/ic_category"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/transparent_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/transparency_gray"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/addCategory_action_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_small"
        android:text="@string/anadir_categoria"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/addCategory_action"
        app:layout_constraintEnd_toStartOf="@+id/addCategory_action"
        app:layout_constraintTop_toTopOf="@+id/addCategory_action"
        />
    <TextView
        android:id="@+id/addevent_action_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_small"
        android:text="@string/Anadir_evento"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/addEvent_action"
        app:layout_constraintEnd_toStartOf="@id/addEvent_action"
        app:layout_constraintTop_toTopOf="@id/addEvent_action"
        />
    <ProgressBar
        android:id="@+id/progress_circular"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_mid"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>